{#
/**
 * @file
 * Default theme implementation to display a book tree.
 *
 * Returns HTML for a wrapper for a book sub-tree.
 *
 * Available variables:
 * - node_type: content type of the node
 * - items: A nested list of book items. Each book item contains:
 *   - attributes: HTML attributes for the book item.
 *   - below: The book item child items.
 *   - title: The book link title.
 *   - url: The book link URL, instance of \Drupal\Core\Url.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     book tree.
 *   - is_collapsed: TRUE if the link has children within the current book tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 * @ingroup themeable
 */
#}

{#
  We call a macro which calls itself to render the full tree.
  @see http://twig.sensiolabs.org/doc/tags/macro.html
#}
{# {{ book_tree.book_links(items, attributes, 0, ['menu', 'nav', 'osc-sidebar-menu'], node_type) }} #}

{% macro book_links(items, attributes, menu_level, classes, node_type) %}
  {% import _self as book_tree %}
  {% if items %}
      {% if node_type == 'binder' or node_type == 'briefing_note' %}
        {%
          set body_classes = [
            'modal-body'
          ]
        %}
        {%
          set ul_classes = [
            'bm-navseq'
          ]
        %}
      {% else %}
        {%
          set ul_classes = [
            'gc-navseq',
            menu_level > 0 ? 'noline',
          ]
        %}
      {% endif %}

    {# Start div for modal body of overlay #}
    {% if not body_classes.isempty %}
      <div{{ attributes.addClass(body_classes) }}>
    {% endif %}
    <ul{{ attributes.addClass(ul_classes) }}>
    {% for item in items %}
      {%
        set item_classes = [
          item.is_expanded and item.below ? 'expanded',
          menu_level == 0 and item.below ? 'dropdown',
          menu_level == 0 and item.is_collapsed ? 'dropdown',
          item.in_active_trail ? 'open',
          item.is_active ? 'active',
        ]
      %}
      {% if menu_level == 0 and item.below %}
        <li{{ item.attributes.addClass(item_classes) }}>
        <a href="{{ item.url }}">{{ item.title }}</a>
      {% else %}
        <li{{ item.attributes.addClass(item_classes) }}>
        {{ link(item.title, item.url) }}
      {% endif %}
      {% if item.below and item.in_active_trail %}
        {{ book_tree.book_links(item.below, attributes.removeClass(classes), menu_level + 1, classes, node_type) }}
      {% endif %}
      </li>
    {% endfor %}
    </ul>
    {# End div for modal body of overlay #}
    {% if not body_classes.isempty %}
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}

{{ _self.book_links(items, attributes, 0, classes, node_type) }}