<div class="row">
  <div class="ip-cover-img ip-cover-hide-mobile ip-cover-hide-tablet" style="background-image:url('{{ file_url(node.field_banner_image.entity.image.entity.fileuri) }}'">
    <div class="container">
      <div class="row">
        <div class="col-md-7">
          <h1 property="name" id="wb-cont">{{ node.title.value }}</h1>
          {{ node.field_introduction.value|raw }}
          {% if not node.field_inst_super_task.isempty %}
            {% if node.field_inst_super_task.0.url.external %}
              <a class="btn btn-call-to-action ip-btn" href="{{ node.field_inst_super_task.uri }}">{{ node.field_inst_super_task.title }}</a>
            {% else %}
              <a class="btn btn-call-to-action ip-btn" href="{{ path(node.field_inst_super_task.0.url.routeName, node.field_inst_super_task.0.url.routeParameters) }}">
                {{ node.field_inst_super_task.title }}
              </a>
            {% endif %}
          {% endif %}
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
  {% if not node.field_inst_featured_link.isempty %}
    <section class="featured opct-90">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <h2 class="wb-inv">{{ "Featured"|t }}</h2>
              {% if node.field_inst_featured_link.0.url.external %}
                <a class="h5" href="{{ node.field_inst_featured_link.uri }}">{{ node.field_inst_featured_link.title }}</a>
              {% else %}
                <a class="h5" href="{{ path(node.field_inst_featured_link.0.url.routeName, node.field_inst_featured_link.0.url.routeParameters) }}">
                  {{ node.field_inst_featured_link.title }}
                </a>
              {% endif %}
          </div>
        </div>
      </div>
    </section>
  {% endif %}
  {% set mostreq = {
    '#type':   'processed_text',
    '#text':    node.field_inst_mostreq.value,
    '#format': 'rich_text',
  } %}
  <section class="most-requested well well-sm brdr-0">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h2 class="mrgn-tp-md">{{ "Most requested"|t }}</h2>
          {{ mostreq }}
        </div>
      </div>
    </div>
  </section>
  {% set svcinfo = {
    '#type':   'processed_text',
    '#text':    node.body.value,
    '#format': 'rich_text',
  } %}
  <section class="gc-srvinfo mrgn-bttm-lg">
    <div class="container">
      <div class="row">
        <h2 class="wb-inv">{{ "Services and information"|t }}</h2>
        <div class="wb-eqht">
          {{ svcinfo }}
        </div>
      </div>
    </div>
  </section>
  {% set contact = {
    '#type':   'processed_text',
    '#text':    node.field_inst_contact.value,
    '#format': 'rich_text',
  } %}
  <div class="most-requested well well-sm brdr-0">
    <div class="container">
      <div class="row">
        <div class="wb-eqht">
          <h2 class="col-lg-3 h3">{{ "About Transport Canada"|t }}</h2>
          <span class="clearfix"></span>
          {{ contact }}
        </div>
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class="row">
      <section class="col-md-4 wb-feeds limit-3 gc-nws">
        <h2 class="h3">{{ "News"|t }}</h2>
        {{ drupal_block('op_news_block', {source_url_en: 'https://www.canada.ca/content/canadasite/api/nws/fds/en/web-feeds/transport-canada-tag.json', source_url_fr: 'https://www.canada.ca/content/canadasite/api/nws/fds/fr/fils-nouvelles/transports-canada-tag.json', max_items: '3'}) }}
      </section>
      <section class="col-md-8 gc-prtts">
        <h2 class="h3">{{ "Features"|t }}</h2>
        <div class="row wb-eqht">
          <div class="col-md-6 mrgn-bttm-md">
            {% if node.field_inst_featured1.0.entity.field_spotlight_media.entity.field_image_link.0.url.external %}
              <a class="hght-inhrt" href="{{ features_uri.0 }}">
                <section class="well well-sm brdr-rds-0 hght-inhrt">
                  {{ drupal_entity('block_content', node.field_inst_featured1.0.target_id) }}
                </section>
              </a>
            {% else %}
              <a class="hght-inhrt" href="{{ path(node.field_inst_featured1.0.entity.field_spotlight_media.entity.field_image_link.0.url.routeName, node.field_inst_featured1.0.entity.field_spotlight_media.entity.field_image_link.0.url.routeParameters) }}">
                <section class="well well-sm brdr-rds-0 hght-inhrt">
                  {{ drupal_entity('block_content', node.field_inst_featured1.0.target_id) }}
                </section>
              </a>
            {% endif %}
          </div>

          <div class="col-md-6 mrgn-bttm-md">
            {% if node.field_inst_featured1.1.entity.field_spotlight_media.entity.field_image_link.0.url.external %}
              <a class="hght-inhrt" href="{{ features_uri.1 }}">
                <section class="well well-sm brdr-rds-0 hght-inhrt">
                  {{ drupal_entity('block_content', node.field_inst_featured1.1.target_id) }}
                </section>
              </a>
            {% else %}
              <a class="hght-inhrt" href="{{ path(node.field_inst_featured1.1.entity.field_spotlight_media.entity.field_image_link.0.url.routeName, node.field_inst_featured1.1.entity.field_spotlight_media.entity.field_image_link.0.url.routeParameters) }}">
                <section class="well well-sm brdr-rds-0 hght-inhrt">
                  {{ drupal_entity('block_content', node.field_inst_featured1.1.target_id) }}
                </section>
              </a>
            {% endif %}
          </div>
        </div>
      </section>
    </div>
  </div>
  
</div>
